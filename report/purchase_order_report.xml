<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_purchase_order" model="ir.actions.report">
        <field name="name">Purchase Order Report</field>
        <field name="model">purchase.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">dynamic_purchase_report.purchase_order_report_template</field>
        <field name="report_file">dynamic_purchase_report.purchase_order_report_template</field>
        <field name="print_report_name">'Purchase Order '</field>
    </record>

    <template id="purchase_order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <main>
                    <div class="page">
                        <h2>Purchase Order Report</h2>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Vendor</th>
                                    <th>Date Order</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><t t-esc="doc.name"/></td>
                                    <td><t t-esc="doc.partner_id.name"/></td>
                                    <td><t t-esc="doc.date_order"/></td>
                                    <td><t t-esc="doc.amount_total"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </main>
            </t>
        </t>
    </template>

</odoo>
